<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutSettingsId"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/widthSettingsId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:layout_alignParentTop = "true"
        >

        <TextView
            android:id="@+id/widthTextId"
            android:text="@string/width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            />

        <SeekBar
            android:id="@+id/widthSeekBarSettingsId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/widthTextId"
            android:layout_toRightOf="@id/widthTextId"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp">
        </SeekBar>

        <TextView
            android:id="@+id/widthValueId"
            android:text="@string/width_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/heightSettingsId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:layout_below="@id/widthSettingsId"
        >

        <TextView
            android:id="@+id/heightTextId"
            android:text="@string/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            />

        <SeekBar
            android:id="@+id/heightSeekBarSettingsId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/heightTextId"
            android:layout_toRightOf="@id/heightTextId"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            />

        <TextView
            android:id="@+id/heightValueId"
            android:text="@string/height_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/minesSettingsId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@id/heightSettingsId"
        >

        <TextView
            android:id="@+id/minesTextId"
            android:text="@string/mines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            />

        <SeekBar
            android:id="@+id/minesSeekBarSettingsId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/minesTextId"
            android:layout_toRightOf="@id/minesTextId"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            />

        <TextView
            android:id="@+id/minesValueId"
            android:text="@string/mines_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/buttonCancelSettingsId"
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/minesSettingsId"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:id="@+id/buttonAcceptSettingsId"
        android:text="@string/accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/buttonCancelSettingsId"
        android:layout_toLeftOf="@id/buttonCancelSettingsId"
        android:layout_toStartOf="@id/buttonCancelSettingsId"
        />

</RelativeLayout>