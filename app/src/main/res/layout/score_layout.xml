<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scoreLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/beginnerLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/beginnerScoreId"
            android:text="@string/beginner"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TitleScoreText"
            />

        <TextView
            android:id="@+id/firstBeginnerScoreId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/bombe1"
            android:drawableLeft="@drawable/bombe1"
            android:layout_below="@+id/beginnerScoreId"
            />

        <TextView
            android:id="@+id/secondBeginnerScoreId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/bombe2"
            android:drawableLeft="@drawable/bombe2"
            android:layout_below="@+id/firstBeginnerScoreId"
            />

        <TextView
            android:id="@+id/thirdBeginnerScoreId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/bombe3"
            android:drawableLeft="@drawable/bombe3"
            android:layout_below="@+id/secondBeginnerScoreId"
            />

        <TextView
            android:id="@+id/intermediateLayoutId"
            android:text="@string/intermediate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:textAppearance="@style/TitleScoreText"
            android:layout_below="@+id/thirdBeginnerScoreId"
            />

        <TextView
            android:id="@+id/firstIntermediateScoreId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/bombe1"
            android:drawableLeft="@drawable/bombe1"
            android:layout_below="@+id/intermediateLayoutId"
            />

        <TextView
            android:id="@+id/secondIntermediateScoreId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/bombe2"
            android:drawableLeft="@drawable/bombe2"
            android:layout_below="@+id/firstIntermediateScoreId"
            />

        <TextView
            android:id="@+id/thirdIntermediateScoreId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/bombe3"
            android:drawableLeft="@drawable/bombe3"
            android:layout_below="@+id/secondIntermediateScoreId"
            />

        <TextView
            android:id="@+id/expertLayoutId"
            android:text="@string/expert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:textAppearance="@style/TitleScoreText"
            android:layout_below="@+id/thirdIntermediateScoreId"
            />

        <TextView
            android:id="@+id/firstExpertScoreId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/bombe1"
            android:drawableLeft="@drawable/bombe1"
            android:layout_below="@+id/expertLayoutId"
            />

        <TextView
            android:id="@+id/secondExpertScoreId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/bombe2"
            android:drawableLeft="@drawable/bombe2"
            android:layout_below="@+id/firstExpertScoreId"
            />

        <TextView
            android:id="@+id/thirdExpertScoreId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/bombe3"
            android:drawableLeft="@drawable/bombe3"
            android:layout_below="@+id/secondExpertScoreId"
            />

        <TextView
            android:id="@+id/totalScoreLayoutId"
            android:text="@string/total"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:textAppearance="@style/TitleScoreText"
            android:layout_below="@+id/thirdExpertScoreId"
            />

        <TextView
            android:id="@+id/totalScoreId"
            android:text="@string/scoreTotalLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/totalScoreLayoutId"
            />
        <TextView
            android:id="@+id/winScoreId"
            android:text="@string/scoreWinLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/totalScoreId"
            />
        <TextView
            android:id="@+id/percentageScoreId"
            android:text="@string/scorePercentageLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/winScoreId"
            />

        <Button
            android:id="@+id/clearButton"
            android:text="@string/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/percentageScoreId"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clearButton"

            />

    </RelativeLayout>

</ScrollView>